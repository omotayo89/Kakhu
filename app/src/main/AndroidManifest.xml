<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blaizedtrail.kakhu" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@drawable/kakhu_launcher_large"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".activities.WelcomeActivity"
            android:label="@string/title_activity_welcome"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".activities.InventoryActivity"
            android:label="@string/title_activity_inventory"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".activities.NewInventory"
            android:label="@string/title_activity_new_inventory"
            android:parentActivityName=".activities.InventoryActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blaizedtrail.kakhu.activities.InventoryActivity" />
        </activity>
        <activity
            android:name=".activities.AddInventory"
            android:label="@string/title_activity_add_inventory"
            android:parentActivityName=".activities.NewInventory"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blaizedtrail.kakhu.activities.NewInventory" />
        </activity>
        <activity
            android:name=".activities.ViewInventory"
            android:label="@string/title_activity_view_inventory"
            android:parentActivityName=".activities.InventoryActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blaizedtrail.kakhu.activities.InventoryActivity" />
        </activity>
        <activity
            android:name=".activities.ViewItem"
            android:label="@string/title_activity_view_item"
            android:parentActivityName=".activities.InventoryActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blaizedtrail.kakhu.activities.InventoryActivity" />
        </activity>
        <activity
            android:name=".activities.TransactionActivity"
            android:label="@string/title_activity_transaction"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blaizedtrail.kakhu.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AgentInfo"
            android:label="@string/title_activity_agent_info"
            android:theme="@style/AppTheme" >
        </activity>
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />
        <activity
            android:name=".activities.SellActivity"
            android:label="@string/title_activity_sell"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".activities.CartsActivity"
            android:label="@string/title_activity_carts"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".activities.CartActivity"
            android:label="@string/title_activity_cart"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".activities.NewCartActivity"
            android:label="@string/title_activity_new_cart"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".activities.ViewCart"
            android:label="@string/title_activity_view_cart"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".activities.SelectInventory"
            android:label="@string/title_activity_select_inventory"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>
