<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_inventory" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blaizedtrail.kakhu.activities.AddInventory">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:hint="Price"
            android:layout_marginTop="40dp"
            android:inputType="number"
            android:id="@+id/itemPrice"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content" />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:hint="Quantity"
            android:id="@+id/itemQuantitiy"
            android:maxLength="3"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Posting agent:"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:id="@+id/postingAgent"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
